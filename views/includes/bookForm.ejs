<form action="<%= edit == true ? `/books/updateBook/${book._id.toString()}` : '/books/addBook' %>" method="POST">
    <label for="name">Enter Title</label>
    <input type="text" id="name" name="name" value="<%= edit == true ? book.name : null %>" required>
    <label for="author">Enter Author</label>
    <input type="text" id="author" name="author" value="<%= edit == true ? book.author : null %>" required>
    <label for="description">Enter Description</label>
    <input type="text" id="description" name="description" value="<%= edit == true ? book.description : null %>" required>
    <label for="price">Enter Price</label>
    <input type="number" id="price" name="price" min="0.01" step="0.01" max="2500" value="<%= edit == true ? book.price : null %>" required>
    <label for="qty">Enter Qty</label>
    <input type="number" id="qty" name="qty" value="<%= edit == true ? book.qty : null %>" required>
    <label for="url">Enter Image Url</label>
    <input type="text" id="url" name="url" value="<%= edit == true ? book.imgUrl : null %>">
    <button class="button" type="submit"><%= edit == true ? 'Update Inventory' : 'Add to Inventory' %></button>
</form>